<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PsycheDarkTheme" parent="AppTheme">

        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:windowBackground">@drawable/night_background_gradient</item>
        <item name="android:statusBarColor">@color/psyche_black</item>
        <item name="colorPrimary">@color/psyche_mustard</item>
        <item name="colorPrimaryDark">@color/psyche_dark_purple</item>
        <item name="colorAccent">@color/psyche_mustard</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:colorBackground">@color/psyche_dark_purple</item>
        <item name="android:colorForeground">@color/psyche_mustard</item>
    </style>

    <style name="PsycheLightTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@color/psyche_dark_purple</item>
        <item name="android:statusBarColor">@color/psyche_mustard</item>
        <item name="colorPrimary">@color/psyche_mustard</item>
        <item name="android:windowBackground">@drawable/light_background_gradient</item>
        <item name="colorPrimaryDark">@color/tw__composer_white</item>
        <item name="colorAccent">@color/psyche_dark_purple</item>
        <item name="android:textColorSecondary">@color/psyche_black</item>
        <item name="android:colorForeground">@color/psyche_magenta</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/psyche_mustard</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/psyche_gold</item>
        <item name="android:statusBarColor">@color/psyche_dark_purple</item>
        <item name="android:textColorPrimary">@color/psyche_dark_purple</item>
    </style>
</resources>