<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/psyche_mustard</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/psyche_gold</item>
        <item name="android:textColorPrimary">@color/psyche_dark_purple</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="PsycheLightTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@color/psyche_dark_purple</item>
        <item name="colorPrimary">@color/psyche_mustard</item>
        <item name="android:windowBackground">@drawable/light_background_gradient</item>
        <item name="colorPrimaryDark">@color/tw__composer_white</item>
        <item name="colorAccent">@color/psyche_dark_purple</item>
        <item name="android:textColorSecondary">@color/psyche_black</item>
        <item name="android:horizontalDivider">@color/psyche_black</item>
        <item name="android:verticalDivider">@color/psyche_black</item>
        <item name="android:textAppearance">@color/psyche_dark_purple</item>
    </style>

    <style name="PsycheDarkTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:windowBackground">@drawable/night_background_gradient</item>
        <item name="colorPrimary">@color/psyche_mustard</item>
        <item name="colorPrimaryDark">@color/psyche_dark_purple</item>
        <item name="colorAccent">@color/psyche_mustard</item>
        <item name="android:textColorSecondary">@color/psyche_mustard</item>
        <item name="android:horizontalDivider">@android:color/white</item>
        <item name="android:verticalDivider">@android:color/white</item>
        <item name="android:colorBackground">@color/psyche_dark_purple</item>
        <item name="android:textAppearance">@android:color/white</item>
    </style>

    <style name="PsycheLightTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PsycheLightTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
