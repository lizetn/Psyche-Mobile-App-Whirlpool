<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg_light"
    android:visibility="visible"
    tools:context="asu.whirlpool.psychewhirlpool.MainActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/homeButtonsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeTitleLayout"
        app:layout_constraintVertical_bias="0.32999998">

        <Button
            android:id="@+id/factsButton"
            android:layout_width="140dp"
            android:layout_height="106dp"
            android:background="@android:color/transparent"
            android:elevation="16dp"
            android:onClick="displayFacts"
            android:paddingLeft="2dp"
            android:paddingStart="@dimen/cardview_default_radius"
            android:paddingTop="@dimen/tw__composer_close_size"
            android:text="@string/button_home_facts"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="140dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/homeFactsIcon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:adjustViewBounds="false"
            android:background="@drawable/ic_info_outline_black_50dp"
            android:backgroundTint="?android:attr/textColorPrimary"
            android:cropToPadding="false"
            android:elevation="20dp"
            tools:layout_editor_absoluteX="217dp"
            tools:layout_editor_absoluteY="8dp" />

        <Button
            android:id="@+id/helpButton"
            android:layout_width="140dp"
            android:layout_height="106dp"
            android:background="@android:color/transparent"
            android:elevation="16dp"
            android:onClick="displayHelp"
            android:paddingTop="@dimen/tw__composer_close_size"
            android:text="@string/button_home_help"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="243dp" />

        <ImageView
            android:id="@+id/homeHelpIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:adjustViewBounds="false"
            android:background="@android:drawable/ic_menu_help"
            android:backgroundTint="?android:attr/textColorPrimary"
            android:elevation="20dp"
            tools:layout_editor_absoluteX="82dp"
            tools:layout_editor_absoluteY="255dp" />

        <Button
            android:id="@+id/countdownButton"
            android:layout_width="140dp"
            android:layout_height="106dp"
            android:background="@android:color/transparent"
            android:elevation="16dp"
            android:onClick="displayCountdown"
            android:paddingTop="@dimen/tw__composer_close_size"
            android:text="@string/button_home_countdown"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/homeClockIcon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:adjustViewBounds="false"
            android:background="@drawable/countdown_clock_300"
            android:backgroundTint="?android:attr/textColorPrimary"
            android:cropToPadding="false"
            android:elevation="20dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="53dp" />

        <Button
            android:id="@+id/nightModeButton"
            android:layout_width="140dp"
            android:layout_height="106dp"
            android:background="@android:color/transparent"
            android:elevation="16dp"
            android:onClick="toggleHomeNightMode"
            android:paddingLeft="2dp"
            android:paddingStart="@dimen/cardview_default_radius"
            android:paddingTop="@dimen/tw__composer_close_size"
            android:text="@string/button_home_nightmode"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="146dp"
            tools:layout_editor_absoluteY="243dp" />

        <ImageView
            android:id="@+id/homeMoonIcon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:adjustViewBounds="false"
            android:background="@drawable/night_mode_300"
            android:backgroundTint="?android:attr/textColorPrimary"
            android:elevation="20dp"
            android:scaleType="fitCenter"
            tools:layout_editor_absoluteX="237dp"
            tools:layout_editor_absoluteY="253dp" />

        <Button
            android:id="@+id/newsButton"
            android:layout_width="140dp"
            android:layout_height="130dp"
            android:background="@android:color/transparent"
            android:elevation="16dp"
            android:onClick="displayFacts"
            android:paddingTop="@dimen/tw__composer_close_size"
            android:text="@string/button_home_news"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="109dp" />

        <ImageView
            android:id="@+id/homeStreamIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:adjustViewBounds="false"
            android:background="@drawable/play_outline_purple"
            android:backgroundTint="?android:attr/textColorPrimary"
            android:cropToPadding="false"
            android:elevation="20dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="117dp" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/homeTitleLayout"
        android:layout_width="389dp"
        android:layout_height="96dp"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.00999999"
        tools:layout_editor_absoluteX="-5dp">

        <Button
            android:id="@+id/nasaButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="2dp"
            android:background="@drawable/nasa_meatball_white"
            android:elevation="16dp"
            android:onClick="displayNASAWebsite"
            android:paddingLeft="2dp"
            android:paddingStart="@dimen/cardview_default_radius"
            android:paddingTop="@dimen/tw__composer_close_size"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/homeTitleText"
            tools:layout_editor_absoluteY="0dp" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/homeTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/nasaButton"
            app:layout_constraintStart_toEndOf="@+id/homeTitleLogo"
            app:layout_constraintTop_toTopOf="@+id/nasaButton">

            <TextView
                android:id="@+id/homeTitleTextLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_home_large"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/homeTitleTextSmall"
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:text="@string/title_home_small"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="@+id/homeTitleTextLarge"
                app:layout_constraintStart_toStartOf="@+id/homeTitleTextLarge"
                app:layout_constraintTop_toBottomOf="@+id/homeTitleTextLarge" />
        </android.support.constraint.ConstraintLayout>

        <ImageView
            android:id="@+id/homeTitleLogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="Psyche: Journey to a Metal World"
            app:layout_constraintBottom_toBottomOf="@+id/homeTitleText"
            app:layout_constraintTop_toTopOf="@+id/homeTitleText"
            app:srcCompat="@drawable/psyche_icon_color"
            tools:layout_editor_absoluteX="55dp" />

    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:addStatesFromChildren="false"
        android:background="?attr/colorPrimaryDark"
        android:clickable="true"
        android:focusable="true"
        android:soundEffectsEnabled="true"
        app:elevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/navigation" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/homeHelpWindow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/colorBackground"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeTitleLayout"
        app:layout_constraintVertical_bias="0.0">

        <ImageButton
            android:id="@+id/homeHelpCloseButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="closeHelp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

        <ImageView
            android:id="@+id/homeIconHelp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/ic_home_black_24dp"
            android:backgroundTint="?android:attr/textColorPrimary"
            app:layout_constraintEnd_toStartOf="@+id/helpTitle"
            app:layout_constraintTop_toBottomOf="@+id/helpTitle" />

        <ImageView
            android:id="@+id/gameIconHelp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/gold_game_icon_200"
            android:backgroundTint="?android:attr/textColorPrimary"
            app:layout_constraintStart_toStartOf="@+id/socialIconHelp"
            app:layout_constraintTop_toBottomOf="@+id/socialIconHelp" />

        <ImageView
            android:id="@+id/socialIconHelp"
            android:layout_width="35dp"
            android:layout_height="33dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/gold_social_icon_200"
            android:backgroundTint="?android:attr/textColorPrimary"
            app:layout_constraintStart_toStartOf="@+id/galleryIconHelp"
            app:layout_constraintTop_toBottomOf="@+id/galleryIconHelp" />

        <ImageView
            android:id="@+id/galleryIconHelp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/gold_gallery_icon_200"
            android:backgroundTint="?android:attr/textColorPrimary"
            app:layout_constraintStart_toStartOf="@+id/timelineIconHelp"
            app:layout_constraintTop_toBottomOf="@+id/timelineIconHelp" />

        <ImageView
            android:id="@+id/timelineIconHelp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/gold_timeline_icon_200"
            android:backgroundTint="?android:attr/textColorPrimary"
            app:layout_constraintStart_toStartOf="@+id/homeIconHelp"
            app:layout_constraintTop_toBottomOf="@+id/homeIconHelp" />

        <TextView
            android:id="@+id/galleryIconLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="32dp"
            android:text="@string/title_activity_gallery"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/galleryIconHelp"
            app:layout_constraintStart_toEndOf="@+id/galleryIconHelp" />

        <TextView
            android:id="@+id/socialIconLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="32dp"
            android:text="@string/title_activity_social_media"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/socialIconHelp"
            app:layout_constraintStart_toEndOf="@+id/socialIconHelp" />

        <TextView
            android:id="@+id/gameIconLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="32dp"
            android:text="@string/title_activity_game"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/gameIconHelp"
            app:layout_constraintStart_toEndOf="@+id/gameIconHelp" />

        <TextView
            android:id="@+id/helpTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/title_help"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/timelineIconLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="32dp"
            android:text="@string/timeline_title"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/timelineIconHelp"
            app:layout_constraintStart_toEndOf="@+id/timelineIconHelp" />

        <TextView
            android:id="@+id/homeIconLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="32dp"
            android:text="@string/title_activity_home"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/homeIconHelp"
            app:layout_constraintStart_toEndOf="@+id/homeIconHelp" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
