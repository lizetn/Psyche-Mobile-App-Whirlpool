<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/timeline_title"
            android:textAlignment="center"
            android:textColor="@color/psyche_black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/NodeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <Button
                android:id="@+id/timeNode0"
                android:layout_width="@dimen/phase_button_size"
                android:layout_height="@dimen/phase_button_size"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@color/psyche_black"
                android:onClick="onClick"
                android:src="@color/psyche_black"
                android:text="@string/phase_one"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/timeNode1"
                android:layout_width="@dimen/phase_button_size"
                android:layout_height="@dimen/phase_button_size"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@color/psyche_black"
                android:onClick="onClick"
                android:src="@color/psyche_black"
                android:text="@string/phase_two"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/timeNode0" />

            <Button
                android:id="@+id/timeNode2"
                android:layout_width="@dimen/phase_button_size"
                android:layout_height="@dimen/phase_button_size"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@color/psyche_black"
                android:onClick="onClick"
                android:src="@color/psyche_black"
                android:text="@string/phase_three"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/timeNode1" />

            <Button
                android:id="@+id/timeNode3"
                android:layout_width="@dimen/phase_button_size"
                android:layout_height="@dimen/phase_button_size"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@color/psyche_black"
                android:onClick="onClick"
                android:src="@color/psyche_black"
                android:text="@string/phase_four"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/timeNode2" />

            <Button
                android:id="@+id/timeNode4"
                android:layout_width="@dimen/phase_button_size"
                android:layout_height="@dimen/phase_button_size"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@color/psyche_black"
                android:onClick="onClick"
                android:src="@color/psyche_black"
                android:text="@string/phase_five"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/timeNode3" />

            <Button
                android:id="@+id/timeNode5"
                android:layout_width="@dimen/phase_button_size"
                android:layout_height="@dimen/phase_button_size"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:background="@color/psyche_black"
                android:onClick="onClick"
                android:src="@color/psyche_black"
                android:text="@string/phase_six"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/timeNode4" />
        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/infoText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:inputType="none"
            android:onClick="hideInfo"
            android:text="@string/psyche_faq_info"
            android:textAlignment="textStart"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/navigation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/NodeLayout"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/NodeLayout"
            app:menu="@menu/navigation" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>
